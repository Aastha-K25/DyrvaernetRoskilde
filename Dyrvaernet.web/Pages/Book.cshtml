@page
@using System.Diagnostics
@model DyrvaernetRoskilde.Pages.BookModel

@{
    ViewData["Title"] = "Book et besøg";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="importmap"></script>
    <title>@ViewData["Title"] Book et besøg </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Book.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DyrvaernetRoskilde.styles.css" asp-append-version="true" />
</head>

<h2>Book En Tid Til Besøg Hos Os</h2>

<form method="post">
    <label>Navn Og Efternavn:</label>
    <input type="text" asp-for="NyBooking.CustomerName" required />
    
    <label>Dato Og Tid:</label>
    <input type ="datetime-local" asp-for="NyBooking.DatoTid" required />
    
    <button type="submit">Book Tid</button>
</form>

<div class="Kontaktinfo">
    <h3>Kontaktinformation</h3>
    <p>Email: info@dyrevaernet.dk </p>
    <p>Telefon: +45 44946695</p>
</div>

<h3>Eksisterende Bookinger</h3>
<ul>
    @foreach (var booking in Model.Books)
    {
        <li>@booking.ToString()</li>
    }
</ul>