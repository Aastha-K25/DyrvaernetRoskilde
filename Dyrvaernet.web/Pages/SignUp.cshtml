@page
@model DyrvaernetRoskilde.Pages.SignUpModel

@{
    ViewData["Title"] = "Sign Up";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="importmap"></script>
    <title>@ViewData["Title"] Tilmeld </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SignUp.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DyrvaernetRoskilde.styles.css" asp-append-version="true" />
</head>
<div>
    <h2>Tilmeld dig</h2>
    <form method="post">
        <label for="FullName">Dit fulde navn:</label>
        <input type="text" name="FullName" required/>
        <br/>
        <br/>
        <label for="Email">Din Email</label>
        <input type="text" name="Email" required></input>
        <input type="hidden" name="EventId" value="@Model.EventId"/>
        <br>
        <br/>
        <button type ="submit">Tilmeld</button>
    </form>
</div>

